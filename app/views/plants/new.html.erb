<%= form_with model: @plant, local: true do |f| %>

    <% if @plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plant.errors.count, "error") %> prohibited this plant from being saved:</h2>
      <ul>
        <% @plant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <label>Plant Name: <%= f.text_field :name %></label><br />

  <label>Scientific Name: <%= f.text_field :scientific_name %></label><br />

  <label>Plant Description: <%= f.text_area :description %></label><br />

  <label>Plant Type:</label><br />
  <%= f.select :plant_type, options_for_select(['Herb', 'Flower', 'Tree', 'Vegetable', 'House Plant']), prompt: 'Select a plant type' %>
  <br />
  <label>Edible?: <%= f.check_box :edible %></label><br />

  <label>Pet Safe?: <%= f.check_box :pet_safe %></label><br />

  <%= f.submit "Add Plant" %>

<% end %>
